{
  "name": "project-name",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "run-p build:sass watch:sass build:js sass:libs server",
    "sass": "node-sass --importer node_modules/node-sass-globbing/index.js --output-style compressed src/assets/scss/style.scss public_html/assets/css/style.css",
    "sass:libs": "node-sass --importer node_modules/node-sass-package-importer/dist/cli.js --output-style compressed src/assets/scss/libs.scss public_html/assets/css/libs.css",
    "autoprefixer": "postcss public_html/assets/css/style.css --use autoprefixer --replace --no-map",
    "server": "node ./server.js",
    "watch:sass": "chokidar \"src/assets/scss/**/*.scss\" -c \"npm run build:sass\"",
    "build:sass": "run-s sass autoprefixer",
    "build:js": "webpack -w"
  },
  "devDependencies": {
    "autoprefixer": "^10.1.0",
    "browser-sync": "^2.26.13",
    "chokidar-cli": "^2.1.0",
    "fs": "^0.0.1-security",
    "node-sass": "^5.0.0",
    "node-sass-globbing": "^0.0.23",
    "node-sass-package-importer": "^5.3.2",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "postcss": "^8.2.2",
    "postcss-cli": "^8.3.1",
    "ts-loader": "^8.0.13",
    "typescript": "^4.1.3",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.1"
  },
  "dependencies": {
    "reset-css": "^5.0.1"
  },
  "browserslist": [
    "last 2 versions",
    "not ie < 11",
    "Android >= 4",
    "iOS >= 10"
  ]
}
